<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"/>

<persistence-unit name="IMS-hibernate-maven" transaction-type="RESOURCE_LOCAL">
<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
<class>IMS-Project.IMS-hibernate-maven.City</class>
<class>IMS-Project.IMS-hibernate-maven.Country</class>
<class>IMS-Project.IMS-hibernate-maven.Address</class>
<class>IMS-Project.IMS-hibernate-maven.PersonInfo</class>
<class>IMS-Project.IMS-hibernate-maven.User</class>
<class>IMS-Project.IMS-hibernate-maven.PhoneNumber</class>
<class>IMS-Project.IMS-hibernate-maven.Stockroom</class>
<class>IMS-Project.IMS-hibernate-maven.ScrappedProducts</class>
<class>IMS-Project.IMS-hibernate-maven.ProductDetails</class>
<class>IMS-Project.IMS-hibernate-maven.ProductGroup</class>
<class>IMS-Project.IMS-hibernate-maven.DepreciationDegree</class>
<class>IMS-Project.IMS-hibernate-maven.ScrappingCriteria</class>
<class>IMS-Project.IMS-hibernate-maven.Product</class>
<class>IMS-Project.IMS-hibernate-maven.ProductClient</class>
<properties>
    <proparty name = "javax.persistence.jdbc.driver" value = "com.mysql.jdbc.Driver"/>
    <proparty name = "javax.persistence.jdbc.url" value = "jdbc:mysql://localhost/test4"/> <!--Later configure it and test-->
    <proparty name = "javax.persistence.jdbc.user" value = "dbadmin"/>
    <proparty name = "javax.persistence.jdbc.password" value = "somePassword"/> <!--Configure the password and test-->

</properties>

</persistence-unit>